{% extends 'base.html.twig' %}

{% block title %}Hello SignInController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<br><br><br><br>
    <h1>Hello {{ controller_name }}! ✅</h1>

   
</div>


<div class="example-wrapper">

{{ form_start(form)}}
        <label class="w3-text"><b> {{ form_label(form.nom) }}</b></label>

                {{ form_widget(form.nom)}}
                {{ form_errors(form.nom) }}
                {{ form_help(form.nom) }}<br>
<label class="w3-text"><b> {{ form_label(form.prenom) }}</b></label>
                {{ form_widget(form.prenom)}}
                {{ form_errors(form.prenom) }}
                {{ form_help(form.prenom) }}<br>
<label class="w3-text"><b> {{ form_label(form.mail) }}</b></label>
                {{ form_widget(form.mail)}}
                {{ form_errors(form.mail) }}
                {{ form_help(form.mail) }}<br>
<label class="w3-text"><b> {{ form_label(form.photo) }}</b></label>
                {{ form_widget(form.photo)}}
                {{ form_errors(form.photo) }}
                {{ form_help(form.photo) }}<br>
<label class="w3-text"><b> {{ form_label(form.telephone) }}</b></label>
                {{ form_widget(form.telephone)}}
                {{ form_errors(form.telephone) }}
                {{ form_help(form.telephone) }}<br>
<label class="w3-text"><b> {{ form_label(form.password) }}</b></label>
                {{ form_widget(form.password.first)}}
                {{ form_errors(form.password.first) }}
                {{ form_help(form.password.first) }}<br>
<label class="w3-text"><b> Répéter le mot de passe</b></label>
                {{ form_widget(form.password.second)}}
                {{ form_errors(form.password.second) }}
                {{ form_help(form.password.second) }}<br>
                {{ form_row(form.submit) }}

                {{ form_end(form) }}


       
{% endblock %}
